<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SlimGym.MainPage">

    <StackLayout Padding="0">
        <Grid>
            <StackLayout Padding="0" Margin="0">
                <Frame BackgroundColor="PaleGreen" HeightRequest="130" HorizontalOptions="FillAndExpand" Padding="24" CornerRadius="0">
                    <Label Text="SlimGym" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="Black" FontSize="36"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="15,110,15,0">
                <Frame BackgroundColor="White" HasShadow="True" HeightRequest="390" HorizontalOptions="FillAndExpand">
                    <StackLayout>
                        <StackLayout  HorizontalOptions="CenterAndExpand">
                            <Label Text="Sign in" FontAttributes="Bold" FontSize="Medium"/>
                        </StackLayout>
                        <StackLayout Margin="0,25,0,0">
                            <Frame BackgroundColor="Transparent" BorderColor="DarkGray" Padding="0" Margin="0" CornerRadius="50" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal">
                                    <Frame BackgroundColor="AliceBlue" CornerRadius="50" HeightRequest="35" WidthRequest="35" Padding="0" Margin="7">

                                    </Frame>
                                    <Entry x:Name="Entry_username" Placeholder="Username" TextColor="Black" HorizontalOptions="FillAndExpand" Margin="0,0,15,0"/>


                                </StackLayout>
                            </Frame>

                            <Frame BackgroundColor="Transparent" BorderColor="DarkGray" Padding="0" Margin="0,20,0,0" CornerRadius="50" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal">
                                    <Frame BackgroundColor="AliceBlue" CornerRadius="50" HeightRequest="35" WidthRequest="35" Padding="0" Margin="7">

                                    </Frame>

                                    <Entry x:Name="Entry_password" Placeholder="Lozinka" IsPassword="True" TextColor="Black" HorizontalOptions="FillAndExpand" Margin="0,0,15,0"/>


                                </StackLayout>
                            </Frame>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <CheckBox IsChecked="False" Color="DarkGray"/>
                            <Label Text="Remember me" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>

                            <Label Text="Forgot password" HorizontalTextAlignment="End" HorizontalOptions="EndAndExpand" FontAttributes="Bold"/>


                        </StackLayout>
                        <Button x:Name="Btn_signin" Text="Sign in" BackgroundColor="DarkGreen" TextColor="White" FontAttributes="Bold" CornerRadius="20" Clicked="Clicked_ButtonAsync"/>

                    </StackLayout>
                </Frame>
            </StackLayout>



        </Grid>
    </StackLayout>

</ContentPage>
