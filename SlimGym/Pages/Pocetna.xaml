        <StackLayout BackgroundColor="White">
            <Frame BackgroundColor="White" HeightRequest="110">
                <Image Source="/images/Logo.png"/>
            </Frame>
            
            <Label Text="Dobrodošli!" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="40" TextColor="#595b5e"  />
